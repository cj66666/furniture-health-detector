/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 50%);
  padding-bottom: 60rpx;
  position: relative;
  overflow: hidden;
}

/* 顶部波浪装饰 */
.wave-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 0;
}

.wave-bg {
  width: 100%;
  height: 200rpx;
}

/* 欢迎区域 */
.welcome-section {
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.logo-area {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #a8d8ff 0%, #7eb8f5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(62, 140, 255, 0.2);
  margin-bottom: 32rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.logo-icon {
  width: 120rpx;
  height: 120rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  text-align: center;
}

.welcome-subtitle-line1 {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.6;
  margin-bottom: 4rpx;
}

.welcome-subtitle-line2 {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.welcome-tag {
  font-size: 24rpx;
  color: var(--primary-color);
  text-align: center;
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, rgba(52, 152, 219, 0.1) 0%, rgba(93, 173, 226, 0.1) 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(52, 152, 219, 0.3);
  display: inline-block;
  margin-top: 8rpx;
}

/* 功能区域 */
.features-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: block;
}

/* 功能卡片 */
.feature-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(52, 152, 219, 0.05) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(50%, -50%);
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.card-icon-blue {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
}

.card-icon-green {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.card-icon {
  width: 56rpx;
  height: 56rpx;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.card-arrow {
  font-size: 48rpx;
  color: var(--text-tertiary);
  font-weight: 300;
  margin-left: 16rpx;
}

/* 使用指南区域 */
.guide-section {
  margin: 0 32rpx 48rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.guide-header {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.guide-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.guide-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guide-step {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8fafb;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.guide-step:active {
  background: #f0f4f7;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 底部区域 */
.footer-section {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.footer-links {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.link-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
  padding: 8rpx 12rpx;
  transition: color 0.3s ease;
}

.link-text:active {
  color: var(--primary-color);
}

.link-divider {
  font-size: 24rpx;
  color: var(--border-color);
  margin: 0 8rpx;
}

.copyright-text {
  font-size: 22rpx;
  color: var(--text-disabled);
  text-align: center;
}

/* 底部装饰 */
.bottom-decoration {
  position: fixed;
  bottom: 0;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  z-index: 0;
}

.decoration-leaf {
  width: 100%;
  height: 100%;
  animation: sway 4s ease-in-out infinite;
}

@keyframes sway {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

