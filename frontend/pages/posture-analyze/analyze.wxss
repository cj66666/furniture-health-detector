/* pages/posture-analyze/analyze.wxss */

.container {
  min-height: 100vh;
  padding: 32rpx;
  background-color: var(--bg-gray);
}

.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.camera-section {
  margin-bottom: 48rpx;
}

.camera-placeholder {
  width: 100%;
  height: 500rpx;
  background: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
}

.placeholder-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-section {
  margin-top: 48rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}