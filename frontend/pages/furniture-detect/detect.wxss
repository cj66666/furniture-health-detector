/* pages/furniture-detect/detect.wxss */

.container {
  min-height: 100vh;
  padding: 32rpx;
  background-color: var(--bg-gray);
}

.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.camera-section {
  margin-bottom: 48rpx;
}

.camera-placeholder {
  width: 100%;
  height: 500rpx;
  background: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
}

.placeholder-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-section {
  margin-top: 48rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.result-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 16rpx;
}

.result-label {
  color: var(--text-secondary);
  font-size: 28rpx;
}

.result-value {
  color: var(--text-primary);
  font-size: 28rpx;
  font-weight: 500;
}

.material-card {
  margin-top: 16rpx;
  padding: 24rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
}

.material-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.material-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 8rpx;
}

.material-label {
  color: var(--text-secondary);
  font-size: 26rpx;
}

.material-value {
  color: var(--text-primary);
  font-size: 26rpx;
}

.risk-section {
  margin-top: 16rpx;
  padding-top: 8rpx;
  border-top: 1rpx solid #eef2f6;
}

.risk-block {
  margin-top: 16rpx;
}

.risk-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.risk-list {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.risk-item {
  font-size: 26rpx;
  color: var(--text-secondary);
}
