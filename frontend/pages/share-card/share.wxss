/* pages/share-card/share.wxss */

.container {
  min-height: 100vh;
  padding: 32rpx;
  background-color: var(--bg-gray);
}

.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.card-preview {
  margin-bottom: 48rpx;
  display: flex;
  justify-content: center;
}

.share-card {
  width: 600rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-logo {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.card-app-name {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.card-content {
  margin-bottom: 32rpx;
}

.card-title {
  display: block;
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.stats-area {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 32rpx;
  min-height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stats-placeholder {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.card-footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}